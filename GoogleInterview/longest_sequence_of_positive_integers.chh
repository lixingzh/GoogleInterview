#include <stdio.h>
#include <vector>

class lspi{
    static int getLSPI (std::vector<int>& array) {
        int lspi = 0;
        int tmp_start_idx = 0;
        for( int loop = 0; loop < array.size(); ++loop){
            if (array[loop] < 0) {
                lspi = std::max(lspi, loop + 1 - tmp_start_idx);
                tmp_start_idx = loop;
            }
        }
        
        return lspi;
    }
};

